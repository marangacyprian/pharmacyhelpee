<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".categoryAddActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:id="@+id/idtoolbarRl"
        android:background="@drawable/shapetoolbar2">



        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/iconIv"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subtitleIv"
            android:fontFamily="sans-serif-condensed"
            android:layout_centerHorizontal="true"
            android:text="add category"
            android:textSize="28sp"
            android:layout_below="@+id/iconIv"
            android:textColor="@color/white"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backbtn"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>


    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoryTil"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/idtoolbarRl"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        app:hintEnabled="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categoryEt"
            android:background="@drawable/shapeedittext1"
            android:drawableStart="@drawable/ic_baseline_category_24"
            android:hint="category title"
            android:inputType="textPersonName|textCapSentences"
            android:padding="10dp"
            android:textColor="#1632E8"
            android:textColorHint="#1E39E8"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitBtn"
            android:layout_below="@+id/categoryTil"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:text="Submit"
            android:background="@drawable/shape_button"/>

    </com.google.android.material.textfield.TextInputLayout>
</RelativeLayout>